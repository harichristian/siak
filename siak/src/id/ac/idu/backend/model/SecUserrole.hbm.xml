<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="id.ac.idu.backend.model.SecUserrole" table="sec_userrole">

        <!--
              <id name="id" type="long"> <column name="urr_id" /> <generator
              class="assigned" /> </id>
          -->

        <id name="id" type="long">
            <column name="urr_id"/>
            <generator class="sequence">
                <param name="sequence">sec_userrole_seq</param>
                <!--
                        for mySQL use generator class="native" <generator class="native" />
                    -->
            </generator>
        </id>

        <version name="version" column="VERSION" type="integer"/>

        <many-to-one name="secUser" class="id.ac.idu.backend.model.SecUser"
                     fetch="select">
            <column name="usr_id"/>
        </many-to-one>
        <many-to-one name="secRole" class="id.ac.idu.backend.model.SecRole"
                     fetch="select">
            <column name="rol_id"/>
        </many-to-one>
    </class>
</hibernate-mapping>
